{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@api": ["src/api"],
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@context": ["src/context"],
      "@hooks": ["src/hooks"],
      "@navigation": ["src/navigation"],
      "@screens": ["src/screens"],
      "@services": ["src/services"],
      "@utils": ["src/utils"],
      "@theme": ["src/theme"],
      "@types": ["src/types"]
    },
    "strict": true
  }
}
